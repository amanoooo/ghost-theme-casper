<div id="toc" ></div>

{{!-- 配置及生成目录 --}}
<script>
    function tocify() {
        var toc = $("#toc").tocify({
            selectors: "h2,h3,h4,h5", // 选择要筛选的标题
            extendPage: false, // 页面不够长时拉长页面，这里选择关闭因为感觉留出大片空白不好看- -
            highlightDefault: false // 自动高亮第一条
        });
    }

    function start() {
        if (typeof jQuery == 'undefined') { 
            delay()
        } else { 
            tocify()
        }
    }

    function delay() {
        setTimeout(start,500)
    }

    start()

</script>